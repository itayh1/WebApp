@model Thumbnail
@{
    ViewBag.Title = "ThumbnailView";
}

<h2>ThumbnailView</h2>


<div class="">
    <img src="@Url.Content(Model.PhotoSemiPath)" alt="" class="" style="width:auto; height:auto; max-width:100%; max-height:100%;">
    <div class="caption">
        <h4>@Model.Name</h4>
        <p>Year: @Model.Year Month: @Model.Month</p>
        <p> <a href="@Url.Action("DeleteAfterViewed", new { path = Model.PhotoPath })" id="btnDelete" class="btn btn-danger btn-xs" role="button">Delete</a></p>
    </div>
</div>
