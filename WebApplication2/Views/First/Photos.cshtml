
@model PhotosModel
@{

    ViewBag.Title = "Photos";
}
<html>
<head>
    <style>
        .circular-image {
            border-radius: 50%;
        }
    </style>
</head>
<body>

    <h2> Photos </h2>

    <div class="row">

        @foreach (var item in Model.Thumbnails)
        {
            <div class="thumbnail">
                <img src="@item.PhotoPath" alt="" class="circular-image" width="242" height="200">

                <h4>@item.Name</h4>
                <p>Year: @item.Year Month: @item.Month</p>
                <p>
                    <a href="@Url.Action("ThumbnailView", new { path = item.PhotoPath })" id="btnView" class="btn btn-info btn-xs" role="button">View</a>
                    <a href="@Url.Action("ThumbnailDelete", new { path = item.PhotoPath })" id="btnDelete" class="btn btn-danger btn-xs" role="button">Delete</a>
                </p>

            </div>
        }
    </div>
</body>
</html>